{
  "annotations": { "list": [] },
  "editable": true,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Errors / min (rate)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(tracing_error_events[5m]) * 60",
          "legendFormat": "errors/min",
          "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" }
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops", "custom": { "drawStyle": "line", "fillOpacity": 10 } } },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" }
    },
    {
      "title": "Errors (last 1h)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "increase(tracing_error_events[1h])",
          "legendFormat": "errors",
          "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" }
        }
      ],
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" }
    },
    {
      "title": "Top Error Targets (1h)",
      "type": "table",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "topk(10, sum(increase(tracing_error_events[1h])) by (__name__))",
          "legendFormat": "{{__name__}}",
          "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" }
        }
      ],
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" }
    },
    {
      "title": "API Errors / min (by endpoint+kind)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 22 },
      "targets": [
        {
          "expr": "sum by (endpoint, kind) (rate(evaluator_api_errors_total[5m])) * 60",
          "legendFormat": "{{endpoint}}/{{kind}}",
          "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" }
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops", "custom": { "drawStyle": "line", "fillOpacity": 10 } } },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" }
    },
    {
      "title": "API Errors (last 1h, by endpoint+kind)",
      "type": "table",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 30 },
      "targets": [
        {
          "expr": "topk(15, sum by (endpoint, kind) (increase(evaluator_api_errors_total[1h])))",
          "legendFormat": "{{endpoint}}/{{kind}}",
          "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" }
        }
      ],
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" }
    }
  ],
